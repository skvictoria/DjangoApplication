	function chkData(){
		v = document.getElementById("name").value
		
		if(document.getElementById("name").value==""){
			alert("이름은 필수 항목입니다")
		}else{
			alert(v+ "님이 입력하셨습니다")
			fo.submit()
		}
	}
	
	function pwchk(){
		input = document.getElementById('input').value
	}
</script>
